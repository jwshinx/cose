<h1>Listing assignments</h1>

<% if flash[:notice] %>
  <div id="notice"><span><%= flash[:notice] %></span></div>
<% end -%>

<table>
  <tr>
    <th>Status</th>
    <th>Type</th>
    <th>Name</th>
    <th>Reminder</th>
    <th>Category</th>
  </tr>

<% for assignment in @assignments %>
  <tr>
    <td><%=h assignment.status.name %></td>
    <td><%=h assignment.assignable_type %></td>
    <td><%=h assignment.name %></td>
    <td><%=h assignment.reminder %></td>
    <td><%=h assignment.category.name %></td>
  </tr>
<% end %>
</table>


