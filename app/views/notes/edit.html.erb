<% form_for(@note) do |f| %>
  <%= f.error_messages %>
  <p>
      <%= f.label :description %><br />
      <%= f.text_area :description, { :rows => 5, :cols => 60 } %>
  </p>
  <p>
      <%= f.label :priority %><br />
      <%= f.text_field :priority %>
  </p>
  <p>
      <%= f.label :label %><br />
      <%= f.text_field :label %>
  </p>


  <% fields_for :assignment do |assignment| %>
    <p>
    <%= assignment.label :name %><br />
    <%= assignment.text_field :name %>
    </p>
    <p>
    <%= assignment.label :reminder %><br />
    <%= assignment.date_select :reminder %>
    </p>
    <p>
    <%= assignment.label :category %><br />
    <%= assignment.select :category_id, @categories %>
    </p>
    <p>
    <%= assignment.label :status %><br />
    <%= assignment.select :status_id, @statuses %>
    </p>
  <% end %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

