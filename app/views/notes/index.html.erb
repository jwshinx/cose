<h1>Listing Notes</h1>

<div class="data_area">
  <table>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Reminder</th>
      <th>Category</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Label</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% for a in @note_assignments %>
      <tr>
        <td><%=h a.status.name %></td>
        <td><%=h a.name %></td>
        <td><%=h a.reminder %></td>
        <td><%=h a.category.name %></td>
        <td><%=h a.assignable.description %></td>
        <td><%=h a.assignable.priority %></td>
        <td><%=h a.assignable.label %></td>
        <td class="showtd">
          <%= link_to 'Show', :controller => 'notes', :action => 'show',
                            :id => a.assignable %></td>
        <td class="edittd">
          <%= link_to 'Edit', edit_note_path(a.assignable) %></td>
        <td class="destroytd"><%= link_to 'Destroy', { :controller => 'notes', 
            :action => 'destroy', :id => a }, 
            :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
</div>

<br />
<%= link_to 'New note', new_note_path %>
<br /><br /><br />
<%= will_paginate @note_assignments %>
